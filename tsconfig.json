{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "baseUrl": "./",
    "rootDir": "src",
    "outDir": "lib",
    "moduleResolution": "node",
    "jsx": "react",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "declaration": true,
    "pretty": true,
    "typeRoots": ["./node_modules/@types"],
    "lib": ["dom"]
  },
  "exclude": ["node_modules", "integration", "lib"]
}
